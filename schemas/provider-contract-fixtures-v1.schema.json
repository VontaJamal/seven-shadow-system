{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rinshari.dev/seven-shadow-system/schemas/provider-contract-fixtures-v1.schema.json",
  "title": "Seven Shadow Provider Contract Fixtures v1",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["schemaVersion", "providers"],
      "properties": {
        "schemaVersion": { "const": 1 },
        "providers": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "schemaVersion",
        "providerName",
        "policyContext",
        "extractionCases",
        "malformedCase",
        "pullContextCases",
        "approvalCase"
      ],
      "properties": {
        "schemaVersion": { "const": 1 },
        "providerName": { "type": "string", "minLength": 1 },
        "policyContext": {
          "type": "object",
          "additionalProperties": false,
          "required": ["scanPrBody", "scanReviewBody", "scanCommentBody", "approvals"],
          "properties": {
            "scanPrBody": { "type": "boolean" },
            "scanReviewBody": { "type": "boolean" },
            "scanCommentBody": { "type": "boolean" },
            "approvals": {
              "type": "object",
              "additionalProperties": false,
              "required": ["fetchTimeoutMs", "maxPages"],
              "properties": {
                "fetchTimeoutMs": { "type": "integer", "minimum": 1 },
                "maxPages": { "type": "integer", "minimum": 1 }
              }
            }
          }
        },
        "extractionCases": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/extractionCase" }
        },
        "malformedCase": { "$ref": "#/$defs/extractionCase" },
        "pullContextCases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "eventName", "payload", "expected"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "eventName": { "type": "string", "minLength": 1 },
              "payload": {},
              "expected": {
                "anyOf": [
                  { "type": "null" },
                  {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["owner", "repo", "pullNumber"],
                    "properties": {
                      "owner": { "type": "string", "minLength": 1 },
                      "repo": { "type": "string", "minLength": 1 },
                      "pullNumber": { "type": "integer", "minimum": 1 }
                    }
                  }
                ]
              }
            }
          }
        },
        "approvalCase": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "name",
            "context",
            "allowedAuthors",
            "expectedApprovals",
            "fetchTimeoutMs",
            "maxPages",
            "pages"
          ],
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "context": {
              "type": "object",
              "additionalProperties": false,
              "required": ["owner", "repo", "pullNumber"],
              "properties": {
                "owner": { "type": "string", "minLength": 1 },
                "repo": { "type": "string", "minLength": 1 },
                "pullNumber": { "type": "integer", "minimum": 1 }
              }
            },
            "allowedAuthors": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            },
            "expectedApprovals": { "type": "integer", "minimum": 0 },
            "fetchTimeoutMs": { "type": "integer", "minimum": 1 },
            "maxPages": { "type": "integer", "minimum": 1 },
            "pages": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["page", "status", "body"],
                "properties": {
                  "page": { "type": "integer", "minimum": 1 },
                  "status": { "type": "integer", "minimum": 100, "maximum": 599 },
                  "headers": {
                    "type": "object",
                    "additionalProperties": { "type": "string" }
                  },
                  "body": {}
                }
              }
            },
            "defaultStatus": { "type": "integer", "minimum": 100, "maximum": 599 },
            "defaultBody": {},
            "defaultHeaders": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          }
        }
      }
    }
  ],
  "$defs": {
    "extractionCase": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "eventName", "payload", "expectedSources"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "eventName": { "type": "string", "minLength": 1 },
        "payload": {},
        "expectedSources": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["pr_body", "review", "comment"]
          }
        },
        "expectedMalformedReasons": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
